<Window x:Class="MeetingProjectTestApplication.UserInformationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" WindowStyle="None" AllowsTransparency="True" 
        Title="UserInformationWindow" Height="800" Width="1000">
    <Window.Resources>
        <Style TargetType="Rectangle">
            <Setter Property="Width" Value="19"/>
            <Setter Property="Fill" Value="#FF4444"/>
            <Setter Property="Height" Value="19"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Width" Value="20"/>
                    <Setter Property="Height" Value="20"/>
                    <Setter Property="Fill" Value="#FF0000"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <StackPanel>
        <Border Background="#9DAFB5" 
                VerticalAlignment="Top"
                Height="28"
                MouseLeftButtonDown="Border_MouseLeftButtonDown">
            <Rectangle 
                    HorizontalAlignment="Right"
                    Margin="0,0,10,0" Height="20"
                    RadiusY="3" RadiusX="3"
                    MouseDown="Rectangle_MouseDown"/>
        </Border>
        <StackPanel>
            <Grid Height="294">
                <Grid.Background>
                    <ImageBrush ImageSource="{Binding BackgroundImage}"/>
                </Grid.Background>
            </Grid>
        </StackPanel>
    </StackPanel>
</Window>
